<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjercicioPaginas.Perfil2"
             Title="Perfil">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label 
                Text="Nombre:"
                Margin="20,20,0,0"/>

            <Label
                Text=""
                x:Name="nombrePerfil"
                Margin="20,20,0,0"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label 
                Text="Email:"
                Margin="20,40,0,0"/>

            <Label
                Text=""
                x:Name="emailPerfil"
                Margin="38,40,0,0"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label 
                Text="Usuario:"
                Margin="20,40,0,0"/>

            <Label
                Text=""
                x:Name="usuarioPerfil"
                Margin="25,40,0,0"/>
        </HorizontalStackLayout>
        <Button
            Text="Modificar"
            Margin="10,40,800,0"
            Clicked="modificarPerfil"/>
    </VerticalStackLayout>
</ContentPage>