<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tienda.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tienda"
    Shell.FlyoutBehavior="Disabled"
    Title="Tienda">

    <TabBar>
        <ShellContent
        Title="Bienvenida"
        ContentTemplate="{DataTemplate local:Bienvenida}"
        Route="Bienvenida"/>

        <ShellContent
        Title="Altas"
        ContentTemplate="{DataTemplate local:Altas}"
        Route="Altas" />

        <ShellContent
        Title="Consulta Lista"
        ContentTemplate="{DataTemplate local:ConsultaLista}"
        Route="ConsultaLista" />
    </TabBar>


</Shell>
